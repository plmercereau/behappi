{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "titleProperty": "project",
  "title": "Project",
  "titleCreate": "Create a project",
  "properties": {
    "name": {
      "type": "string",
      "attrs": {
        "placeholder": "Name",
        "title": "Please enter the name of the project"
      },
      "validation": "required|min:3"
    },
    "location": {
      "type": "point",
      "attrs": {
        "placeholder": "Location of the project",
        "title": "TODO distinction betwwen placeholder and title"
      },
      "zoomProperty": "zoom"
    }
  },
  "additionalProperties": false,
  "required": ["name"],
  "requiredCreate": ["name"]
}
