{
  "name": "project",
  "type": "document",
  "mixins": ["orgUnit"],
  "properties": {
    "name": {
      "label": "Name of the project"
    },
    "parent": {
      "schemaName": "mission",
      "label": "Mission",
      "title": "${ typeof parent.shortName === 'undefined' ? parent.name : parent.shortName }"
    },
    "children" : {
      "schemaName": "facility",
      "label": "Facilities in the project",
      "subtitle": "todo - type",
      "create": {
        "title": "New facility",
        "inheritedProperties": ["location", "zoom"]
      }
    },
    "location": {
      "label": "Location of the base",
      "markers": {
        "self": true
      }
    },
    "area": {
      "type": "location",
      "label": "Area of the project",
      "zoom": "zoomArea",
      "markers": {
        "self": "location",
        "collection": "children",
        "property": "location"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "base", "facilities", "administration"],
      "sections": {
        "main": {
          "read": ["name", "shortName", "parent", "code", "area"],
          "edit": ["name", "shortName", "parent", "code", "area"]
        },
        "base": {
          "title": "Base",
          "read": ["location"],
          "edit": ["location"]
        },
        "facilities": {
          "hideLabels": ["children"],
          "title": "Health facilities",
          "read": ["children"]
        }
      }
    },
    "editor": {
      "sections": {
        "facilities": {
          "create": "children"
        }
      }
    },
    "manager": {
      "sections": {
        "facilities": {
          "create": "children"
        }
      }
    },
    "admin": {
      "sections": {
        "facilities": {
          "create": "children"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Projects",
      "subtitle": "${ typeof parent.shortName === 'undefined' ? parent.name : parent.shortName }",
      "filters": [[":_schema", "==", "project"]],
      "media": {
        "property": "area"
      }
    },
    "manager": {
      "create": {
        "title": "New project",
        "properties": ["parent", "name"]

      }
    },
    "admin": {
      "create": {
        "title": "New project",
        "properties": ["parent", "name"]

      }
    }
  }
}
