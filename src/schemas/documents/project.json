{
  "name": "project",
  "type": "document",
  "mixins": ["timestamp", "workflow", "test"],
  "collection": "orgUnits",
  "title": {
    "property": "name"
  },
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "placeholder": "Please enter the name of the project",
      "validation": "required|min:3"
    },
    "mission": {
      "type": "collection",
      "component": "select",
      "schemaName": "mission",
      "title": "Mission",
      "placeholder": "Enter the mission of the project",
      "autocomplete": true,
      "unique": true,
      "create": false
    },
    "location": {
      "type": "location",
      "title": "Location",
      "placeholder": "Enter the location of the project",
      "zoom": "zoom",
      "markers": {
        "self": true
      }
    },
    "categories": {
      "type": "collection",
      "component": "select",
      "title": "Categories",
      "placeholder": "Category of the org unit",
      "unique": false,
      "create": false,
      "options": {
        "project": "Project",
        "mission": "Mission"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": {
            "property": "name"
          },
          "read": ["name", "mission", "location", "status"],
          "edit": ["name", "mission", "location", "status"]
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Projects",
      "uri": "/projects/{id}",
      "create": {
        "title": "New project",
        "default": {
          "categories": {
            "project": true
          }
        },
        "properties": ["name"],
        "parentProperty": "mission",
        "inheritedProperties": ["location", "zoom"]
      }
    },
    "card" : {
      "media": {
        "property": "location"
      }
    }
  }
}
