{
  "name": "project",
  "type": "document",
  "mixins": ["orgUnit"],
  "properties": {
    "name": {
      "placeholder": "Please enter the name of the project"
    },
    "parent": {
      "schemaName": "mission",
      "label": "Mission",
      "title": "${parent.name}",
      "placeholder": "Enter the mission of the project"
    },
    "location": {
      "type": "location",
      "label": "Location",
      "placeholder": "Enter the location of the project"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "read": ["name", "parent", "location"],
          "edit": ["name", "parent", "location"]
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Projects",
      "subtitle": "${ parent.name }",
      "filters": [[":category", "==", "project"]],
      "create": {
        "title": "New project",
        "default": {
          "category": "project"
        }
      }
    }
  }
}
