{
  "name": "facility",
  "type": "document",
  "mixins": ["orgUnit"],
  "properties": {
    "name": {
      "label": "Name of the facility"
    },
    "parent": {
      "schemaName": "project",
      "label": "Project",
      "title": "${typeof parent.shortName === 'undefined' ? parent.name : parent.shortName}"
    },
    "children" : {
      "schemaName": "service",
      "subtitle": "",
      "label": "Services of the facility",
      "create": {
        "title": "New service",
        "inheritedProperties": ["location", "zoom"]
      }
    },
    "location": {
      "type": "location",
      "label": "Location of the facility"
    },
    "type": {
      "type": "collection",
      "component": "select",
      "label": "Type",
      "description": "Type of facility",
      "unique": true,
      "create": false,
      "options": {
        "dispensary": "Dispensary",
        "healthCentre": "Health Centre",
        "nursingHome": "Nursing Home",
        "maternityHome": "Maternity Home",
        "hospital": "Hospital"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "services", "administration"],
      "sections": {
        "main": {
          "read": ["name", "shortName", "parent", "type", "location"],
          "edit": ["name", "shortName", "parent", "type", "location"]
        },
        "services": {
          "title": "Services",
          "hideLabels": ["children"],
          "read": ["children"]
        }
      }
    },
    "editor": {
      "sections": {
        "services": {
          "create": "children"
        }
      }
    },
    "manager": {
      "sections": {
        "services": {
          "create": "children"
        }
      }
    },
    "admin": {
      "sections": {
        "services": {
          "create": "children"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Health facilities",
      "subtitle": "${typeof typeItem === 'undefined' ? '' : typeItem + ', '}${ typeof parent.shortName === 'undefined' ? parent.name : parent.shortName }",
      "filters": [[":_schema", "==", "facility"]],
      "media": {
        "property": "location"
      }
    },
    "manager": {
      "create": {
        "title": "New project",
        "properties": ["parent", "name"]

      }
    },
    "admin": {
      "create": {
        "title": "New project",
        "properties": ["parent", "name"]
      }
    }
  },
  "searchProperties": ["typeItem"]
}
