{
  "name": "facility",
  "type": "document",
  "mixins": ["orgUnit"],
  "properties": {
    "name": {
      "label": "Name of the facility"
    },
    "parent": {
      "schemaName": "project",
      "label": "Project",
      "title": "${typeof parent.shortName === 'undefined' ? parent.name : parent.shortName}"
    },
    "children" : {
      "schemaName": "service",
      "label": "Services of the facility",
      "create": {
        "title": "New service"
      }
    },
    "location": {
      "type": "location",
      "label": "Location of the facility"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "services", "administration"],
      "sections": {
        "main": {
          "read": ["name", "shortName", "parent", "location"],
          "edit": ["name", "shortName", "parent", "location"]
        },
        "services": {
          "title": "Services",
          "read": ["children"]
        }
      }
    },
    "editor": {
      "sections": {
        "projects": {
          "create": "children"
        }
      }
    },
    "manager": {
      "sections": {
        "projects": {
          "create": "children"
        }
      }
    },
    "admin": {
      "sections": {
        "projects": {
          "create": "children"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Facilities",
      "subtitle": "${ typeof parent.shortName === 'undefined' ? parent.name : parent.shortName }",
      "filters": [[":_schema", "==", "facility"]],
      "media": {
        "property": "location"
      }
    }
  }
}
