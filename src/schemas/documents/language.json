{
  "name": "purpose",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "languages",
  "title": "${name}",
  "properties": {
    "code": {
      "type": "string",
      "label": "Name"
    },
    "name": {
      "type": "string",
      "label": "Name"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": {
            "property": "name"
          },
          "read": ["code", "name"],
          "edit": ["code", "name"]
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Languages",
      "uri": "/languages/{id}",
      "create": {
        "title": "New language",
        "properties": ["code", "name"]
      }
    }
  }
}
