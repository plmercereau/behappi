{
  "name": "mission",
  "type": "object",
  "collection": "missions",
  "title": {
    "property": "name"
  },
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "placeholder": "Please enter the name of the mission",
      "validation": "required|min:3"
    },
    "location": {
      "type": "area",
      "title": "Area of the mission",
      "placeholder": "Please give the area of the mission",
      "zoomProperty": "zoom",
      "markersRefCollectionName": "projects",
      "markersLocationPropertyName": "location"
    },
    "projects" : {
      "type": "refCollection",
      "schemaName": "project",
      "title": "Projects of the mission",
      "placeholder": ""
    }
  },
  "itemViews": {
    "default": {
      "sectionsOrder": ["main", "administration", "projects"],
      "sections": {
        "main": {
          "type": "properties",
          "title": {
            "property": "name"
          },
          "read": ["name", "location", "status"],
          "edit": ["name", "location", "status"]
        },
        "projects": {
          "type": "refCollection",
          "property": "projects",
          "edit": true
        }
      }
    }
  },
  "listViews": {
    "default" : {
      "type": "badge",
      "title": "Missions",
      "item": {
        "uri": "/missions/{id}",
        "title": {
          "property": "name"
        },
        "media": {
          "property": "location"
        }
      },
      "create": {
        "title": "New mission",
        "properties": ["name"]
      }
    }
  }
}
