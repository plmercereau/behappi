{
  "name": "mission",
  "type": "document",
  "mixins": ["orgUnit"],
  "properties": {
    "name": {
      "placeholder": "Please enter the name of the mission"
    },
    "location": {
      "label": "Area of the mission",
      "placeholder": "Please give the area of the mission",
      "markers": {
        "self": false,
        "collection": "children",
        "property": "location"
      }
    },
    "children" : {
      "schemaName": "project",
      "label": false,
      "placeholder": "Projects of the mission"
    },
    "nbProjects": {
      "type": "computed",
      "aggregation": "count",
      "path": "children"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "projects", "applications"],
      "sections": {
        "main": {
          "subtitles": ["children"],
          "read": ["name", "location"],
          "edit": ["name", "location"]
        },
        "projects": {
          "title": "Projects",
          "read": ["children"],
          "create": "children"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Missions",
      "subtitle": "${ nbProjects ? nbProjects + ' project' : ''}${ nbProjects > 1 ? 's' : '' }",
      "filters": [[":category", "==", "mission"]],
      "create": {
        "title": "New mission",
        "default": {
          "category": "mission"
        }
      }
    },
    "card": {
      "media": {
        "property": "location"
      }
    }
  }
}
