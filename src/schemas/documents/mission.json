{
  "name": "mission",
  "type": "document",
  "mixins": ["orgUnit"],
  "properties": {
    "name": {
      "label": "Name of the mission"
    },
    "code": {
      "label": "Financial code of the coordination"
    },
    "location": {
      "label": "Location of the coordination office",
      "markers": {
        "self": true
      }
    },
    "area": {
      "type": "location",
      "label": "Area of the mission",
      "zoom": "zoomArea",
      "markers": {
        "self": "location",
        "collection": "children",
        "property": "location"
      }
    },
    "children" : {
      "schemaName": "project",
      "label": "Projects of the mission",
      "subtitle": "${ nbChildren ? nbChildren + (nbChildren > 1 ? ' health facilities' : ' health facility'): ''}",
      "create": {
        "title": "New project",
        "inheritedProperties": ["location", "zoom", "area", "zoomArea"]
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "coordination", "projects", "applications"],
      "sections": {
        "main": {
          "subtitles": ["children"],
          "read": ["name", "shortName", "area"],
          "edit": ["name", "shortName", "area"]
        },
        "coordination": {
          "title": "Coordination",
          "read": ["code", "location"],
          "edit": ["code", "location"]
        },
        "projects": {
          "title": "Projects",
          "read": ["children"]
        },
        "applications": {
          "title": "Coordination applications"
        }
      }
    },
    "editor": {
      "sections": {
        "projects": {
          "create": "children"
        }
      }
    },
    "manager": {
      "sections": {
        "projects": {
          "create": "children"
        }
      }
    },
    "admin": {
      "sections": {
        "projects": {
          "create": "children"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Missions",
      "subtitle": "${ nbChildren ? nbChildren + ' project' : ''}${ nbChildren > 1 ? 's' : '' }",
      "filters": [[":_schema", "==", "mission"]],
      "media": {
        "property": "area"
      }
    },
    "manager": {
      "create": {
        "title": "New mission",
        "properties": ["name"]
      }
    },
    "admin": {
      "create": {
        "title": "New mission",
        "properties": ["name"]
      }
    }
  }
}
