{
  "name": "workflow",
  "type": "mixin",
  "properties": {
    "status": {
      "type": "collection",
      "component": "select",
      "title": "Status",
      "placeholder": "Status of the document",
      "unique": true,
      "create": false,
      "options": {
        "draft": "Draft",
        "submitted": "Submitted",
        "published": "Published"
      }
