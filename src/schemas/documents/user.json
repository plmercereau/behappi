{
  "name": "user",
  "mixins": ["timestamp"],
  "type": "document",
  "collection": "users",
  "title": {
    "property": "email"
  },
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "placeholder": "Please enter the name of the user",
      "validation": "required|min:3"
    },
    "email": {
      "type": "string",
      "title": "Email",
      "placeholder": "Please enter the email of the user",
      "validation": "required|min:3"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": {
            "property": "name"
          },
          "read": ["name", "email"],
          "edit": ["name", "email"]
        }
      }
    }
  },
  "collectionView": {
    "default" : {
      "title": "Users",
      "uri": "/users/{id}",
      "create": {
        "title": "New user",
        "properties": ["email"]
      }
    }
  }
}
