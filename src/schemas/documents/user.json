{
  "name": "user",
  "mixins": ["timestamp"],
  "type": "document",
  "collection": "users",
  "title": "${email}",
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "label": "Name of the user",
      "validation": "required|min:3"
    },
    "email": {
      "type": "string",
      "label": "Email of the user",
      "validation": "required|min:3"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": "${email}",
          "read": ["name", "email"],
          "edit": ["name", "email"]
        }
      }
    }
  },
  "collectionView": {
    "default" : {
      "title": "Users",
      "uri": "/users/{id}",
      "create": {
        "title": "New user",
        "properties": ["email"]
      }
    }
  }
}
