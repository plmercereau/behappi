{
  "name": "user",
  "mixins": ["timestamp"],
  "type": "document",
  "collection": "users",
  "title": "${name || email}",
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "label": "Name of the user",
      "validation": {
        "required": true,
        "min": 3
      }
    },
    "password": {
      "type": "string",
      "component": "password",
      "label": "Password",
      "validation": {
        "required": true,
        "min": 6
      }
    },
    "email": {
      "type": "string",
      "label": "Email of the user",
      "validation": {
        "required": true,
        "email": true
      }
    },
    "photoURL": {
      "type": "link",
      "label": "Photo URL",
      "external": true
    },
    "role": {
      "type": "collection",
      "component": "select",
      "label": "Role",
      "description": "Role of the user",
      "unique": true,
      "create": false,
      "options": {
        "member": "Default member, read-only user",
        "editor": "Editor: manages their own org units",
        "manager": "Manager of the application. Can perform most of the actions",
        "admin": "Super-user, can perform any action"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": "Main",
          "read": ["name", "email", "role"],
          "edit": ["name", "role"]
        }
      }
    },
    "member": {
      "edit": false,
      "delete": false,
      "actions": [
        {
          "resetPassword": {
            "title": "Reset password",
            "conditions": [["{userId}", "==", ":id"]],
            "action": "update",
            "payload": {
              "_action": "resetPassword"
            }
          }
        }
      ]
    },
    "editor": {
      "edit": false,
      "delete": false
    },
    "manager": {
      "edit": true,
      "delete": false
    },
    "admin": {
      "edit": true,
      "delete": true
    }
  },
  "collectionView": {
    "default" : {
      "title": "Users",
      "subtitle": "${ typeof role === 'undefined' ? '' : role }",
      "uri": "/users/{id}"
    },
    "admin" : {
      "create": {
        "title": "New user",
        "properties": ["email", "name", "photoURL"]
      }
    },
    "editor": {},
    "manager": {}
  }
}
