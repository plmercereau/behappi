{
  "name": "user",
  "type": "document",
  "collection": "users",
  "title": {
    "property": "email"
  },
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "placeholder": "Please enter the name of the user",
      "validation": "required|min:3"
    },
    "email": {
      "type": "string",
      "title": "Email",
      "placeholder": "Please enter the email of the user",
      "validation": "required|min:3"
    }
  },
  "itemViews": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "type": "properties",
          "title": {
            "property": "name"
          },
          "read": ["name", "email"],
          "edit": ["name", "email"]
        }
      }
    }
  },
  "listViews": {
    "default" : {
      "type": "badge",
      "title": "Users",
      "item": {
        "uri": "/users/{id}",
        "title": {
          "property": "email"
        }
      },
      "create": {
        "title": "New user",
        "properties": ["email"]
      }
    }
  }
}
