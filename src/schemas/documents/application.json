{
  "name": "application",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "applications",
  "title": "${name}",
  "versionable": true,
  "properties": {
    "name": {
      "type": "string",
      "label": "Name",
      "description": "Name of the application",
      "validation": {
        "required": true,
        "min": 3
      }
    },
    "applicationUsages": {
      "type": "collection",
      "component": "dropdown",
      "schemaName": "applicationUsage",
      "label": "Application usages",
      "title": "${orgUnit.name}",
      "description": "Usages of this application",
      "autocomplete": true,
      "unique": false,
      "create": {
        "title": "New application usage",
        "parentProperty": "application",
        "properties": ["orgUnit"]
      }
    },
    "primaryPurpose": {
      "type": "collection",
      "component": "chip",
      "schemaName": "purpose",
      "label": "Primary purpose",
      "description": "Primary purpose of the application",
      "autocomplete": true,
      "unique": true,
      "create": true
    },
    "linkTool": {
      "type": "link",
      "label": "Link to the tool",
      "external": true
    },
    "userGuide": {
      "type": "link",
      "label": "User guide",
      "external": true
    },
    "technicalDocumentation": {
      "type": "link",
      "label": "Technical documentation",
      "external": true
    },
    "dataStructure": {
      "type": "collection",
      "component": "select",
      "label": "Data structure",
      "description": "Data structure: (more than one possible)",
      "unique": false,
      "create": false,
      "options": {
        "aggregated": "Aggregated data",
        "lineList": "Line list",
        "longitudinal": "Longitudinal data"
      }
    },
    "personalIdentifiableInformation": {
      "type": "collection",
      "component": "select",
      "label": "Person Identifier",
      "description": "Person Identifier (pick one)",
      "unique": true,
      "create": false,
      "options": {
        "none": "None",
        "pseudonymised": "Pseudonymised",
        "indentifiableExportProtected": "Yes, with pseudonymisation in export",
        "indentifiable": "Yes, without auto pseudonymisation in export"
      }
    },
    "analytics": {
      "type": "collection",
      "component": "select",
      "label": "Analytic capacity",
      "description": "Analytic capacity (pick one)",
      "unique": true,
      "create": false,
      "options": {
        "complicated": "Complicated",
        "balanced": "Well balanced",
        "acceptable": "Acceptable",
        "poor": "Poor",
        "none": "None"
      }
    },
    "sharing": {
      "type": "collection",
      "component": "select",
      "label": "Data sharing",
      "description": "Data sharing (pick one)",
      "unique": true,
      "create": false,
      "options": {
        "mature": "Very mature",
        "acceptable": "Acceptable",
        "poor": "Poor",
        "unacceptable": "Unacceptable"
      }
    },
    "contentStandardisationLevel": {
      "type": "collection",
      "component": "select",
      "label": "Standardization content",
      "description": "Standardization content (pick one)",
      "unique": true,
      "create": false,
      "options": {
        "excellent": "Excellent",
        "good": "Good",
        "medium": "Medium",
        "outdated": "Outdated",
        "nonStandard": "Not standardized"
      }
    },
    "languages": {
      "type": "collection",
      "component": "chip",
      "schemaName": "language",
      "label": "Languages",
      "description": "Available languages",
      "autocomplete": true,
      "unique": false,
      "create": false
    },
    "technologies": {
      "type": "collection",
      "component": "chip",
      "schemaName": "technology",
      "label": "Platform / program language",
      "description": "Platform / program language",
      "autocomplete": true,
      "unique": false,
      "create": true
    },
    "comment": {
      "type": "string",
      "label": "Remark"
    },
    "applicationStatus": {
      "type": "collection",
      "component": "select",
      "label": "Status",
      "description": "Status",
      "unique": true,
      "create": false,
      "options": {
        "active": "Active",
        "obsolete": "Obsolete",
        "decommissioned": "Decommissioned"
      }
    },
    "supported": {
      "type": "boolean",
      "label": "Supported by OCB ",
      "description": "Currently supported by OCB (Ehealth or other, see contact)"
    },
    "supportOrgUnit": {
      "type": "collection",
      "component": "dropdown",
      "schemaName": "orgUnit",
      "visible": [[":supported", "==", true]],
      "label": "Support contact",
      "description": "Support contact",
      "autocomplete": true,
      "unique": true,
      "create": true
    },
    "medicalActivities": {
      "type": "collection",
      "component": "chip",
      "schemaName": "medicalActivity",
      "label": "Medical activities",
      "description": "Medical activities",
      "autocomplete": true,
      "unique": false,
      "create": true
    },
    "nbUsages": {
      "type": "computed",
      "aggregation": "count",
      "path": "applicationUsages"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "usages"],
      "sections": {
        "main": {
          "title": "General",
          "read": ["name", "primaryPurpose", "medicalActivities", "linkTool", "userGuide", "technicalDocumentation", "dataStructure", "personalIdentifiableInformation", "analytics", "sharing", "contentStandardisationLevel", "languages", "technologies", "comment", "applicationStatus", "supported", "supportOrgUnit"],
          "edit": ["name", "primaryPurpose", "medicalActivities", "linkTool", "userGuide", "technicalDocumentation", "dataStructure", "personalIdentifiableInformation", "analytics", "sharing", "contentStandardisationLevel", "languages", "technologies", "comment", "applicationStatus", "supported", "supportOrgUnit"]
        },
        "usages": {
          "title": "Usages",
          "read": ["applicationUsages"],
          "edit": [],
          "create": "applicationUsages"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Applications",
      "subtitle": "${ nbUsages ? nbUsages + ' usage' : ''}${ nbUsages > 1 ? 's' : '' }",
      "create": {
        "title": "New application",
        "properties": ["name"]
      }
    }
  }
}
