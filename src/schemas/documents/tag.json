{
  "name": "tag",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "tags",
  "title": "${name}",
  "properties": {
    "name": {
      "type": "string",
      "label": "Name"
    },
    "collection": {
      "type": "string",
      "label": "Collection name of the tag"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": {
            "property": "name"
          },
          "read": ["name", "collection"],
          "edit": ["name", "collection"]
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Tags",
      "uri": "/tag/{id}",
      "create": {
        "title": "New tag",
        "properties": ["name"]
      }
    }
  }
}
