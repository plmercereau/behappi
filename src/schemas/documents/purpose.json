{
  "name": "purpose",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "purposes",
  "title": "${name}",
  "properties": {
    "name": {
      "type": "string",
      "label": "Name"
    },
    "description": {
      "type": "string",
      "label": "Description"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": {
            "property": "name"
          },
          "read": ["name", "description"],
          "edit": ["name", "description"]
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Purposes",
      "create": {
        "title": "New purpose",
        "properties": ["name"]
      }
    }
  }
}
