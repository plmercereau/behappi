{
  "name": "orgUnit",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "orgUnits",
  "title": "${ name }",
  "properties": {
    "name": {
      "type": "string",
      "label": "Name",
      "placeholder": "Please enter the name of the organisation unit",
      "validation": {
        "required": true,
        "min": 3
      }
    },
    "code": {
      "type": "string",
      "label": "Financial Code",
      "placeholder": "Please enter the code of the organisation unit",
      "validation": {
        "required": true,
        "min": 3
      }
    },
    "parent": {
      "type": "collection",
      "component": "dropdown",
      "schemaName": "orgUnit",
      "label": "Parent",
      "placeholder": "Enter the parent organisation unit",
      "autocomplete": true,
      "unique": true,
      "create": false
    },
    "children" : {
      "type": "collection",
      "component": "card",
      "schemaName": "orgUnit",
      "label": "Children organisation units",
      "placeholder": "",
      "unique": false,
      "create": {
        "title": "New org Unit",
        "properties": ["name"],
        "parentProperty": "parent",
        "inheritedProperties": ["location", "zoom"]
      }
    },
    "applicationUsages": {
      "type": "collection",
      "component": "dropdown",
      "schemaName": "applicationUsage",
      "label": "Application usages",
      "title": "${application.name}",
      "placeholder": "Usages of application in this org unit",
      "autocomplete": true,
      "unique": false,
      "create": {
        "title": "New application usage",
        "parentProperty": "orgUnit",
        "properties": ["application"]
      }
    },
    "location": {
      "type": "location",
      "label": "Location",
      "placeholder": "Enter the location of the org Unit",
      "zoom": "zoom",
      "markers": {
        "self": true
      }
    },
    "category": {
      "type": "collection",
      "component": "select",
      "label": "Categories",
      "placeholder": "Category of the org unit",
      "unique": true,
      "create": false,
      "options": {
        "hq": "Headquarter",
        "project": "Project",
        "mission": "Mission"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "applications", "administration"],
      "sections": {
        "main": {
          "title": "General",
          "read": ["name", "code", "location"],
          "edit": ["name", "code", "location"]
        },
        "applications": {
          "title": "Applications",
          "read": ["applicationUsages"],
          "edit": [],
          "create": "applicationUsages"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Org Units",
      "sort": [["name", "ASC"]],
      "create": {
        "properties": ["name"]
      }
    },
    "card" : {
      "media": {
        "property": "location"
      }
    }
  },
  "searchProperties": ["name"]
}
