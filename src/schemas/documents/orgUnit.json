{
  "name": "orgUnit",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "orgUnits",
  "title": "${ typeof shortName === 'undefined' ? name : shortName }",
  "properties": {
    "name": {
      "type": "string",
      "label": "Name",
      "validation": {
        "required": true,
        "min": 3
      }
    },
    "shortName": {
      "type": "string",
      "label": "Short name",
      "validation": {
        "min": 3
      }
    },
    "code": {
      "type": "string",
      "label": "Financial Code",
      "validation": {
        "required": true,
        "min": 3
      }
    },
    "parent": {
      "type": "collection",
      "component": "dropdown",
      "schemaName": "orgUnit",
      "validation": {
        "required": true
      },
      "label": "Parent",
      "autocomplete": true,
      "unique": true,
      "create": false
    },
    "children" : {
      "type": "collection",
      "component": "card",
      "schemaName": "orgUnit",
      "label": "Children organisation units",
      "unique": false,
      "create": {
        "title": "New org Unit",
        "properties": ["name"],
        "parentProperty": "parent",
        "inheritedProperties": ["location", "zoom"]
      }
    },
    "nbChildren": {
      "type": "computed",
      "aggregation": "count",
      "path": "children"
    },
    "applicationUsages": {
      "type": "collection",
      "component": "dropdown",
      "schemaName": "applicationUsage",
      "label": "Application usages",
      "title": "${application.name}",
      "autocomplete": true,
      "description": "Usages of this application",
      "unique": false,
      "create": {
        "title": "New application usage",
        "parentProperty": "orgUnit",
        "properties": ["application"]
      }
    },
    "location": {
      "type": "location",
      "label": "Location of the Org Unit",
      "zoom": "zoom",
      "markers": {
        "self": true
      }
    },
    "category": {
      "type": "collection",
      "component": "select",
      "label": "Category of the Org Unit",
      "unique": true,
      "create": false,
      "options": {
        "hq": "Headquarter",
        "project": "Project",
        "mission": "Mission"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "applications", "administration"],
      "sections": {
        "main": {
          "title": "General",
          "read": ["name", "shortName"],
          "edit": ["name", "shortName"]
        },
        "applications": {
          "title": "Applications",
          "read": ["applicationUsages"],
          "edit": []
        }
      }
    },
    "member": {
      "edit": false,
      "delete": false
    },
    "editor": {
      "edit": true,
      "delete": false,
      "sections": {
        "applications": {
          "create": "applicationUsages"
        }
      }
    },
    "manager": {
      "edit": true,
      "delete": true,
      "sections": {
        "applications": {
          "create": "applicationUsages"
        }
      }
    },
    "admin": {
      "edit": true,
      "delete": true,
      "sections": {
        "applications": {
          "create": "applicationUsages"
        }
      }
    }
  },
  "collectionView": {
    "default": {
      "title": "Org Units",
      "sort": [["name", "ASC"]]
    },
    "member": {},
    "editor": {},
    "manager": {
      "create": {
        "title": "New Org Unit"
      }
    },
    "admin": {
      "create": {
        "title": "New Org Unit"      }
    }
  },
  "searchProperties": ["name", "shortName", "parent.name", "parent.shortName"]
}
