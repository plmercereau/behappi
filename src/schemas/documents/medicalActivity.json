{
  "name": "medicalActivity",
  "type": "document",
  "mixins": ["timestamp"],
  "collection": "medicalActivities",
  "title": "${name}",
  "properties": {
    "name": {
      "type": "string",
      "label": "Label"
    },
    "description": {
      "type": "string",
      "label": "Description"
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["main", "administration"],
      "sections": {
        "main": {
          "title": "Main",
          "read": ["name", "description"],
          "edit": ["name", "description"]
        }
      }
    },
    "member": {
      "edit": false,
      "delete": false
    },
    "editor": {
      "edit": false,
      "delete": false
    },
    "manager": {
      "edit": true,
      "delete": false
    },
    "admin": {
      "edit": true,
      "delete": true
    }
  },
  "collectionView": {
    "default": {
      "title": "Medical activities"
    },
    "admin" : {
      "create": {
        "title": "New medical activity",
        "properties": ["name"]
      }
    },
    "editor": {},
    "manager": {
      "create": {
        "title": "New medical activity",
        "properties": ["name"]
      }
    }
  }
}
