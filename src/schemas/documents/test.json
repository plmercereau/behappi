{
  "name": "test",
  "type": "mixin",
  "properties": {
    "testStatus": {
      "type": "collection",
      "component": "list",
      "label": "Test de collection de type 'select' e.g. status",
      "unique": true,
      "create": false,
      "options": {
        "option1": "Option 1",
        "option2": "Option 2"
      }
    },
    "testTagCollection": {
      "type": "collection",
      "component": "chip",
      "schemaName": "tag",
      "label": "Test de collection de type 'tag collection'",
      "autocomplete": true,
      "unique": false,
      "create": true
    },
    "testTagAdHoc": {
      "type": "collection",
      "component": "chip",
      "label": "Test de collection de type 'tag ad hoc'",
      "unique": false,
      "create": true
    },
    "testSingleRef": {
      "type": "collection",
      "component": "list",
      "schemaName": "mission",
      "filters": [[":status", "==", "published"]],
      "label": "Test de collection de type 'single select' e.g. la mission d'un projet",
      "unique": true,
      "create": false
    },
    "testMultipleRef": {
      "type": "collection",
      "component": "chip",
      "schemaName": "mission",
      "filters": [[":owner.id", "==", "{userId}"]],
      "label": "Test de collection de type 'liste parmi une collection fixe existante'",
      "unique": false,
      "create": false
    },
    "testMultipleValue": {
      "type": "collection",
      "component": "list",
      "label": "Test de collection de type 'multiple select'",
      "unique": false,
      "create": false,
      "options": {
        "option1": "Option number one",
        "option2": "Option number two",
        "option3": "Option number three"
      }
    }
  },
  "itemView": {
    "default": {
      "sectionsOrder": ["testA", "testB", "testC"],
      "sections": {
        "testA": {
          "title": "Test A",
          "read": ["testStatus", "testTagCollection", "testTagAdHoc", "testSingleRef", "testMultipleRef", "testMultipleValue"],
          "edit": ["testStatus", "testTagCollection", "testTagAdHoc", "testSingleRef", "testMultipleRef", "testMultipleValue"]
        }
      }
    }
  }
}
