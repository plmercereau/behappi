{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "titleProperty": "name",
  "title": "Mission",
  "titleCreate": "Create a mission",
  "properties": {
    "name": {
      "type": "string",
      "attrs": {
        "placeholder": "Name",
        "title": "Please enter the name of the mission"
      },
      "validation": "required|min:3"
    },
    "location": {
      "type": "area",
      "attrs": {
        "placeholder": "Area of the mission",
        "title": "Please give the area of the mission"
      },
      "zoomProperty": "zoom"
    }
  },
  "additionalProperties": false,
  "required": ["name"],
  "requiredCreate": ["name"]
}
